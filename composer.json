{
  "autoload": {
    "psr-4": {
      "App\\": "src"
    }
  },
  "require": {
    "php": "^7.0",
    "friendsofphp/php-cs-fixer": "2.2.20",
    "paysera/lib-php-cs-fixer-config": "^1.7",
    "evp/money": "^1.6",
    "ext-json": "*"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "3.3.0",
    "paysera/lib-arcanist-php-cs-extension": "^1.3"
  },
  "scripts": {
    "post-install-cmd": [
      "Paysera\\PhpCsFixerConfig\\Composer\\PhpCsFixerConfigProvider::copyPhpCs",
      "Paysera\\Composer\\ArcConfigParser::parseArcConfig"
    ],
    "post-update-cmd": [
      "Paysera\\PhpCsFixerConfig\\Composer\\PhpCsFixerConfigProvider::copyPhpCs",
      "Paysera\\Composer\\ArcConfigParser::parseArcConfig"
    ],
    "nodev": "@composer install --no-dev"
  },
  "config": {
    "bin-dir": "bin/"
  },
  "repositories": [
    {"type": "composer", "url": "https://toran.dev.lan/repo/private/"},
    {"type": "composer", "url": "https://toran.dev.lan/repo/packagist/"},
    {"packagist": false}
  ]
}
